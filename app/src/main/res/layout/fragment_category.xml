<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.category.CategoryFragment">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_category_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_category_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_end="16dp" />

        <TextView
            android:id="@+id/textView_category_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/guideline_category_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/textView_category_id"
            app:layout_constraintStart_toEndOf="@+id/textView_category_id"
            app:layout_constraintTop_toTopOf="@+id/textView_category_id" />

        <TextView
            android:id="@+id/textView_category_description"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/guideline_category_2"
            app:layout_constraintStart_toStartOf="@+id/guideline_category_1"
            app:layout_constraintTop_toBottomOf="@+id/textView_category_id" />

        <Button
            android:id="@+id/button_category_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Edit"
            app:layout_constraintEnd_toStartOf="@+id/guideline_category_2"
            app:layout_constraintTop_toBottomOf="@+id/textView_category_description" />

        <Button
            android:id="@+id/button_category_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Delete"
            app:layout_constraintBottom_toBottomOf="@+id/button_category_edit"
            app:layout_constraintEnd_toStartOf="@+id/button_category_edit"
            app:layout_constraintTop_toTopOf="@+id/button_category_edit" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>